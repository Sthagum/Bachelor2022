@model IEnumerable<QuadBook.Models.ResourceProperty>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ResourcePropertyValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeProperty)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ResourcePropertyValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeProperty.TypePropertyName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ResourcePropertyID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ResourcePropertyID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ResourcePropertyID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
